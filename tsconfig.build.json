{
  "extends": "./tsconfig.json",
  "include": ["./src/components/**/*.ts", "./src/components/**/*.tsx", "./src/components/**/*.js", "./src/components/**/*.jsx"],
  "exclude": [
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.js",
    "./src/**/*.stories.jsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.test.js",
    "./src/**/*.test.jsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.js",
    "./src/**/*.spec.jsx",
    "./src/**/__tests__/**"
  ],
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    //"rootDir": "./src",
    "outDir": "./lib",
    // "skipLibCheck" must be true in order to not see errors in the @pega/pcore-pconnect-typedefs files themselves
    "skipLibCheck": true
  },
  "files": ["./sdk-local-component-map.js", "./src/theme.ts"]
}
